<html lang="en">
	<%- include('../partials/head.ejs') %>

	<body>
		<nav>
			<ul>
				<li><a href="/login">Log in</a></li>
			</ul>
		</nav>

		<div class="container">
			<div class="image"></div>
			<div class="information">
				<form action="/signup" class="form" method="POST">
					<div class="form_div">
						<input
							type="text"
							required
							autocomplete="off"
							id="fname"
							class="form_input"
							name="username"
							placeholder=" "
						/>
						<label for="Uname" class="form_label"
							><span class="content-name">Username</span>
						</label>
					</div>

					<div class="form_div">
						<input
							type="text"
							required
							autocomplete="off"
							id="fname"
							class="form_input"
							name="country"
							placeholder=" "
						/>
						<label for="country" class="form_label"
							><span class="content-name">Country</span>
						</label>
					</div>
					<div class="form_div">
						<input
							type="email"
							required
							autocomplete="off"
							id="fname"
							class="form_input"
							name="email"
							placeholder=" "
						/>
						<label for="email" class="form_label"
							><span class="content-name">Email</span>
						</label>
					</div>
					<div class="form_div">
						<input
							type="password"
							id="pass"
							class="form_input"
							required
							name="pass"
							placeholder=" "
						/>
						<label for="password" class="form_label"
							><span class="pass">Password</span>
						</label>
					</div>
					<input type="checkbox" name="remember" id="rem" />
					<input type="submit" class="form_button" value="signup" />
				</form>
			</div>
		</div>
	</body>
</html>

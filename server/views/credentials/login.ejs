<html lang="en">
	<%- include('../partials/head.ejs') %>

	<body>
		<nav>
			<ul>
				<li><a href="/signup">Sign up page</a></li>
			</ul>
		</nav>
		<div class="container">
			<div class="information">
				<h1 class="form_title">Log in info...</h1>
				<form action="/login" method="post" class="form">
					<div class="form_div">
						<input
							type="text"
							required
							autocomplete="off"
							id="fname"
							class="form_input"
							name="email"
							placeholder=" "
						/>
						<label for="Uname" class="form_label"
							><span class="content-name">Email</span>
						</label>
					</div>
					<div class="form_div">
						<input
							type="password"
							id="pass"
							class="form_input"
							required
							name="pass"
							placeholder=" "
						/>
						<label for="password" class="form_label"
							><span class="password">Password</span>
						</label>
					</div>
					<input type="checkbox" name="remember" id="rem" />
					<input type="submit" class="form_button" value="Login" />
				</form>
			</div>
		</div>
	</body>
</html>
